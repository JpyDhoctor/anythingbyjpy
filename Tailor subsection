<script>
  // Tab functionality
  document.querySelectorAll('.gender-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      // Remove active class from all tabs
      document.querySelectorAll('.gender-tab').forEach(t => t.classList.remove('active'));
      // Add to clicked tab
      tab.classList.add('active');
      
      // Hide all categories
      document.querySelectorAll('.style-category').forEach(cat => cat.classList.remove('active'));
      // Show selected category
      document.getElementById(`${tab.dataset.gender}-styles`).classList.add('active');
    });
  });

  // Style selection
  document.querySelectorAll('.select-style').forEach(btn => {
    btn.addEventListener('click', function() {
      const styleName = this.parentElement.querySelector('h3').textContent;
      alert(`You selected: ${styleName}\nThis will connect you to our tailors specializing in this style.`);
      // In real implementation: redirect to booking page with style parameter
    });
  });
</script>
